<body class="dashboard-page">
<%- include('Partials/header') %>

<main class="inventory-list">
    <h2>All Assets in Inventory</h2>
    <% if (assets.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Asset Name</th>
                    <th>Category</th>
                    <th>Serial Number</th>
                    <th>Purchase Date</th>
                    <th>Status</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% assets.forEach(asset => { %>
                    <tr>
                        <td><%= asset.name %></td>
                        <td><%= asset.category %></td>
                        <td><%= asset.serialNumber %></td>
                        <td><%= asset.purchaseDate ? asset.purchaseDate.toDateString() : 'N/A' %></td>
                        <td><%= asset.status %></td>
                        <td><%= asset.notes || 'N/A' %></td>
                        <td>
                            <a href="/assets/edit/<%= asset._id %>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No assets found in the inventory.</p>
    <% } %>
</main>

<%- include('Partials/footer') %>
</body>
